{
  "name": "streamdeck-editor-react",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@testing-library/jest-dom": "^4.2.4",
    "@testing-library/react": "^9.3.2",
    "@testing-library/user-event": "^7.1.2",
    "dbus-native": "^0.4.0",
    "react": "^16.12.0",
    "react-dom": "^16.12.0",
    "react-scripts": "3.4.0"
  },
  "scripts": {
    "start": "concurrently -k \"npm run watch:js\" \"npm run watch:css\" \"npm run electron\"",
    "electron": "electron .",
    "build:js": "react-scripts build",
    "build:css": "postcss --config postcss.config.js -o src/css/app.css resources/css/index.css",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "watch:css": "postcss --config postcss.config.js -o src/css/app.css resources/css/index.css -w",
    "watch:js": "nodemon --watch src -e js,css --exec npm run build:js"
  },
  "homepage": "./",
  "main": "public/main.js",
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@fullhuman/postcss-purgecss": "^2.1.0",
    "autoprefixer": "^9.7.4",
    "concurrently": "^5.1.0",
    "cssnano": "^4.1.10",
    "electron": "^8.0.2",
    "electron-reload": "^1.5.0",
    "minifier": "^0.8.1",
    "nodemon": "^2.0.2",
    "postcss-cli": "^7.1.0",
    "postcss-import": "^12.0.1",
    "tailwindcss": "^1.2.0"
  }
}
